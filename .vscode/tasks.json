{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": true,
    "revealProblems": "always",
    "close": false,
    "group": "watchers"
  },
  "tasks": [
    {
      "label": "TSC Build Task",
      "type": "shell",
      "detail": "Output watcher for this Type-Script project",
      "command": "npx",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "args": [
        "tsc",
        "-b",
        "${workspaceFolder}/src/tsconfig.json",
        "--generateCpuProfile",
        "${workspaceFolder}/out/performance/cpu-info.cpuprofile",
        "--verbose"
      ],
      "isBackground": false,
      "runOptions": {
        "reevaluateOnRerun": true,
        "instanceLimit": 1,
        "runOn": "default"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": false,
        "group": "TSC Builder",
        "panel": "dedicated",
        "reveal": "never",
        "revealProblems": "onProblem",
        "close": false,
        "showReuseMessage": false
      },
      "problemMatcher": {
        "base": "$tsc",
        "applyTo": "allDocuments",
        "severity": "info"
      }
    },
    {
      "label": "Linting",
      "type": "npm",
      "script": "fix:and:json",
      "detail": "Hard linting process for this Type-Script project",
      "presentation": {
        "panel": "dedicated",
        "group": "Linting",
        "focus": false,
        "echo": false,
        "clear": true,
        "revealProblems": "onProblem",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
